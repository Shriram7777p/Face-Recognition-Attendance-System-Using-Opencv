<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Attendence can found Below"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="80dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="First Hour"
                android:layout_below="@id/text1"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Second Hour"
                android:layout_below="@id/h1"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Third Hour"
                android:layout_below="@id/h2"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Fourth Hour"
                android:layout_below="@id/h3"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Fifth Hour"
                android:layout_below="@id/h4"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sixth Hour"
                android:layout_below="@id/h5"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/h7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Seventh Hour"
                android:layout_below="@id/h6"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>